{
    "name": "alpipego/wp-base",
    "description": "WordPress Installation Blueprint (Including recurrent plugins etc.)",
    "license": "GPL 3.0+",
    "type": "project",
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        },
        {
             "type": "composer",
             "url": "https://wp-languages.github.io/"
        }
    ],
    "require": {
        "php": ">=5.4",
        "hassankhan/config": "0.8.*",
        "composer/installers": "~v1.2",

        "johnpbloch/wordpress": "4.6.*",
        "koodimonni/composer-dropin-installer": "dev-master",

        "brain/occipital": "dev-master",

        "wpackagist-plugin/advanced-custom-fields": "4.4.*",
        "wpackagist-plugin/redirection": "~2.4",
        "wpackagist-plugin/loco-translate": "~2.0",
        "wpackagist-plugin/google-sitemap-generator": "~4.0",
        "wpackagist-plugin/no-self-ping": "0.2",
        "wpackagist-plugin/postman-smtp": "~1.7",
        "wpackagist-plugin/user-role-editor": "~4.0"
    },
    "require-dev": {
        "wpackagist-plugin/query-monitor": "*",
        "wpackagist-plugin/rewrite-rules-inspector": "*",
        "wpackagist-plugin/debug-plugin-activation-errors": "*",
        "sllh/composer-versions-check": "^2.0"

    },
    "extra": {
        "wordpress-install-dir": "web/wp",
        "installer-paths": {
            "web/must-use/{$name}/": ["type:wordpress-muplugin"],
            "web/plugins/{$vendor}-{$name}/": ["type:wordpress-plugin"],
            "web/assets/themes/{$name}/": ["type:wordpress-theme"]
        },
        "dropin-paths": {
            "web/languages/": ["vendor:koodimonni-language"]
        }
    },    
    "scripts": {
        "post-install-cmd": "sudo chown -R www-data log/ web/",
        "pre-update-cmd": "sudo chown -R `whoami` web/",
        "post-update-cmd": "sudo chown -R www-data web/"
    }
}
